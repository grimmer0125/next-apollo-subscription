    "version": "0.2.0",
    "configurations": [{
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/server",
            "name": "Debug Node.js Server",
            "runtimeArgs": [
                "-r",
                "${workspaceFolder}/server/node_modules//ts-node/register",
            ],
            "args": [
                "${workspaceFolder}/server/index.ts"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/server",
            "name": "Debug Node.js server current file",
            "runtimeArgs": [
                "-r",
                "${workspaceFolder}/server/node_modules//ts-node/register",
            ],
            "args": [
                "${file}"
            ]
        }
    ]
}